{
  "name": "relative-file-navigator",
  "displayName": "Relative File Navigator",
  "description": "Search and open files in the same directory as the currently open file",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "relativeFileNavigator.open",
        "title": "Open Relative File Navigator"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "translate": "npx @vscode/l10n-dev export ./src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/l10n-dev": "^0.0.25",
    "vscode-ext-codicons": "^1.5.0"
  }
}
